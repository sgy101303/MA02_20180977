<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explain1Activity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="어떤 병원을 찾으시나요?"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toTopOf="@+id/btnNext1to2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-100dp"
                android:scrollbars="vertical">

                <RadioButton
                    android:id="@+id/radiobtnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:checked="true"
                    android:text="전체 검색 (모든 병원을 보겠습니다.)"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/radiobtnEye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="안과" />

                <RadioButton
                    android:id="@+id/radiobtnSurgery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="외과" />

                <RadioButton
                    android:id="@+id/radiobtnInternal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="내과" />

                <RadioButton
                    android:id="@+id/radiobtnOtolaryngology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="이비인후과" />

                <RadioButton
                    android:id="@+id/radiobtnDental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="치과" />

                <RadioButton
                    android:id="@+id/radiobtnOriental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="한의원" />

                <RadioButton
                    android:id="@+id/radiobtnKids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="소아과" />

                <RadioButton
                    android:id="@+id/radioButtonWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="기타" />

                <EditText
                    android:id="@+id/etCategory"
                    android:layout_width="271dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="100dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="-45dp"
                    android:clickable="true"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="ex) 정형외과, 신경외과, 비뇨기과, 흉부외과"
                    android:inputType="text"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/radiobtnHName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="병원 이름을 검색할래요." />

                <EditText
                    android:id="@+id/ethospitalName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    android:clickable="true"
                    android:enabled="false"
                    android:hint="정확히 입력하지 않을 시 검색되지 않을 수 있습니다."
                    android:inputType="text"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:text="@string/explainText"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radiobtnPlastic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="-475dp"
                    android:text="성형외과" />

                <RadioButton
                    android:id="@+id/radiobtnMental"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginLeft="200dp"
                    android:text="정신과" />

                <RadioButton
                    android:id="@+id/radiobtnDermatology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginLeft="200dp"
                    android:text="피부과" />

                <RadioButton
                    android:id="@+id/radiobtnObgyn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="200dp"
                    android:layout_marginLeft="200dp"
                    android:text="산부인과" />

            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnNext1to2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:onClick="onClick"
        android:text="다음 단계로 넘어가기 >>"
        app:backgroundTint="#558557"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>